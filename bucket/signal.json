{
    "version": "8.0.0",
    "description": "A cross-platform encrypted messaging service.",
    "homepage": "https://signal.org",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://updates.signal.org/desktop/signal-desktop-win-8.0.0.exe#/dl.7z",
            "hash": "sha512:97b45247478fd36a24202bfcd74ac76b63c0acc219e0f180d09d0f6d7b55444c72f768cadaa8dafa6983734317c598439fb9c2d001ea54ea50cb554d65c73729",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*.exe\" -Recurse -Force"
            ]
        }
    },
    "shortcuts": [
        [
            "Signal.exe",
            "Signal",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "persist": "User Data",
    "checkver": {
        "url": "https://updates.signal.org/desktop/latest.yml",
        "regex": "version:\\s([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://updates.signal.org/desktop/signal-desktop-win-$version.exe#/dl.7z"
            }
        },
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512:\\s$base64"
        }
    }
}
