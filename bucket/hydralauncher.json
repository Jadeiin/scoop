    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.6.3/hydralauncher-3.6.3-setup.exe#/dl.7z",
            "hash": "sha512:a703cae2f0291fd2f6ed911b112603bb9ac90d6db38beecc15831bd0e5ba3ba445efe95e63da4c3b9e3261ed3d693f0b37923de61a7b47173389f4c8ac2ae59a",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
