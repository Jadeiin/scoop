{
    "version": "3.4.3",
    "description": "Hydra is a game launcher with its own embedded bittorrent client",
    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.4.3/hydralauncher-3.4.3-setup.exe#/dl.7z",
            "hash": "sha512:e81a5c9eea2d05923fcfb7e41514f7e4aac0fc75509f2806418627376e842ea47112801c38548d79369bdaa509cabe8f7ea121b1fef462307878fe83c077c88d",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\" -Recurse"
            ]
        }
    },
    "shortcuts": [
        [
            "Hydra.exe",
            "Hydra",
            "--user-data-dir=\"$dir\\User Data\""
