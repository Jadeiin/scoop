    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.7.6/hydralauncher-3.7.6-setup.exe#/dl.7z",
            "hash": "sha512:24288916931e0bdea3b3010b51fabe0396fe5ff7a66437d2ecbbaf83bf0218186739e4bb300d899dcc357a74ae98a740af42b5892247720db449fa0246aef6c5",
