{
    "version": "3.7.2",
    "description": "Hydra is a game launcher with its own embedded bittorrent client",
    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.7.2/hydralauncher-3.7.2-setup.exe#/dl.7z",
            "hash": "sha512:430e640746f3647bdfa0798975272932184ef4eb69ac4cfaf4f75862c4a7b8e9b5dc931b28dbeecb23425e38eb1f3bbe5c1e307c4e3aff55d03480e412291cf1",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\" -Recurse"
