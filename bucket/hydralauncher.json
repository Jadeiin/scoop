    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.6.7/hydralauncher-3.6.7-setup.exe#/dl.7z",
            "hash": "sha512:a6e0b9a50ca312abc4c8e9c764aed4f06fe8e27f2d088e56c046e807537d271f1d41dc13b4889e5c3668f2bcfd216c9c635c6bdab7641390ee6074fd67a72b45",
            "pre_install": [
