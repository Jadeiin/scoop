{
    "version": "3.8.3",
    "description": "Hydra is a game launcher with its own embedded bittorrent client",
    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.8.3/hydralauncher-3.8.3-setup.exe#/dl.7z",
            "hash": "sha512:45661950f9faa1a2231f4dae840b5587a92a8c4cd3101a766ea0299c43e28ec5df6dbb44b21b478a029e132600c85f839bac1bc759c7be44d2f0669ad4c48fe6",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
