{
    "version": "3.6.5",
    "description": "Hydra is a game launcher with its own embedded bittorrent client",
    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.6.5/hydralauncher-3.6.5-setup.exe#/dl.7z",
            "hash": "sha512:8348aa1688198705c27c9d480b319a9885579064cca97043f3cf2403cf6afbb6d33da197491679cefc0886a38068f2e3f97563d756e2c194c3b0831ea6a6bc09",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
