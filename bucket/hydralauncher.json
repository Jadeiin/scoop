{
    "version": "3.7.5",
    "description": "Hydra is a game launcher with its own embedded bittorrent client",
    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.7.5/hydralauncher-3.7.5-setup.exe#/dl.7z",
            "hash": "sha512:8a4953b9ef784b3c80c2981c32ab6c161c87ae1b84553bdd0519553b271ab83cfa91c79aa157a282ab2ef06870d331f4478b3ef7b6b1092566bded50bba13f78",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
