    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.7.0/hydralauncher-3.7.0-setup.exe#/dl.7z",
            "hash": "sha512:801b2201441ddfc5405c723fa9fb3a71ef5f3e9cf2a3b8824157c1be53ce6fdf9239dcafe67938ae325ca68a8133a283ad56ffa6e241745fe29b9fa49b759546",
            "pre_install": [
