    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.8.1/hydralauncher-3.8.1-setup.exe#/dl.7z",
            "hash": "sha512:f8dc2ee0fe732cee21ff8c154f587ed5a5eae43267c7b42dc3760551b074bcb02d089d102a28f6f608d63274591bffb74bdad95f95fe62ac37f7e9b6684c4239",
            "pre_install": [
