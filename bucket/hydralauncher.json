{
    "version": "3.4.8",
    "description": "Hydra is a game launcher with its own embedded bittorrent client",
    "homepage": "https://hydra-launcher.net/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.4.8/hydralauncher-3.4.8-setup.exe#/dl.7z",
            "hash": "sha512:201abd84dea262eb36f5c561516a732d312d6e9af74b9fd9fe77863ec011b1cab5e4685fab5648988d3dff9028c44a67ba948baf6a52bebc28436a88c1a5f657",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\" -Recurse"
            ]
        }
    },
    "shortcuts": [
        [
            "Hydra.exe",
            "Hydra",
            "--user-data-dir=\"$dir\\User Data\""
