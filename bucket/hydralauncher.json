    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.7.4/hydralauncher-3.7.4-setup.exe#/dl.7z",
            "hash": "sha512:0938f0714dd18bcb8dc8afd192c69248dc1281375e979f484bcf43510b23a2a1b9ed9dba214f3c8ae67965c791edb48bda36785c53c0d7485b6744a1e180d165",
            "pre_install": [
