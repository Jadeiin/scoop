    "architecture": {
        "64bit": {
            "url": "https://github.com/hydralauncher/hydra/releases/download/v3.9.0/hydralauncher-3.9.0-setup.exe#/dl.7z",
            "hash": "sha512:fc06669a1e4d8faf1e48fecb4aed4940a3dc8190581a0092c93aa963ccf3145843621d82e42501b7b56c006f34ba99c8acdfebca266e398a093504502e91cc0e",
            "pre_install": [
